@using FeesPackage.Data_Access;
@model List<tblReferral>

@{
    ViewBag.Title = "tblReferral";
}

<div class="span9">
    <div class="content">
        <div class="module">
            <div class="module-head">
                <h3>
                    <i>@ViewBag.Title</i> Table
                </h3>
            </div>
            <div class="module-body table">
                <table cellpadding="0" cellspacing="0" border="0" class="datatable-1 table table-bordered table-striped	display" width="100%">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(modelItem => Model[0].Referral_Name)</th>
                            <th>@Html.DisplayNameFor(modelItem => Model[0].Referral_Firm)</th>
                            <th>@Html.DisplayNameFor(modelItem => Model[0].Referral_Tax_ID)</th>
                            <th>@Html.DisplayNameFor(modelItem => Model[0].Referral_Credit_Atty)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (tblReferral model in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => model.Referral_Name)</td>
                                <td>@Html.DisplayFor(modelItem => model.Referral_Firm)</td>
                                <td>@Html.DisplayFor(modelItem => model.Referral_Tax_ID)</td>
                                <td>@Html.DisplayFor(modelItem => model.Referral_Credit_Atty)</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>@Html.DisplayNameFor(modelItem => Model[0].Referral_Name)</th>
                            <th>@Html.DisplayNameFor(modelItem => Model[0].Referral_Firm)</th>
                            <th>@Html.DisplayNameFor(modelItem => Model[0].Referral_Tax_ID)</th>
                            <th>@Html.DisplayNameFor(modelItem => Model[0].Referral_Credit_Atty)</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
        <!--/.module-->
    </div>
    <!--/.content-->
</div>
<!--/.span9-->
