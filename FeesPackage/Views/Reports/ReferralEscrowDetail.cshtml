@using FeesPackage.Models;
@model ClientInfoModel

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
</head>
<body>
    <style>
        .title {
            font-size: larger;
            font-weight: bold;
            float: left;
        }
        .date {
            float: right;
            font-style: italic;
        }
        .label {
            min-width: 246px;
            text-align: right;
            font-weight: bold
        }
        .totals {
            font-weight: bold
        }
        .value {
            min-width: 200px;
        }
        table.center {
            margin: auto;
            text-align: center;
        }
        td {
            min-width: 80px;
        }
        td.right,
        th.right {
            text-align: right;
        }
        td.left,
        th.left {
            text-align: left;
        }
        th {
            border-bottom: 1px solid #555;
        }
        td.overflow {
            white-space: nowrap;
            max-width: 10px;
        }
        tr.lineitems {
            font-size: smaller;
        }
        tr.superscore td,
        td.superscore {
            border-top: 1px solid #000;
        }
    </style>

    <div style="max-width: 1000px;">
        ══════════════════════════════════════════════════════════════════════════════════════════
        <div class="title">Referral Escrow Detail @string.Format("{0:MM/dd/yyyy}", ViewBag.fromDate) - @string.Format("{0:MM/dd/yyyy}", ViewBag.toDate)</div>
        <div class="date">@DateTime.Today.ToString("dd-MMM-yy")</div>
        ══════════════════════════════════════════════════════════════════════════════════════════
        <br />
        <table class="center">
            <tr>
                <th>Escrow Account</th>
                <th>Client</th>
                <th></th>
                <th></th>
                <th>From</th>
                <th>To</th>
                <th>Payment Amount</th>
                <th>Referral %</th>
                <th>Referral Amount</th>
            </tr>
    @{ 
        var acct = "";
        var total = 0.0;
    }
    @foreach (var group in Model.ReferralEscrowDetail)
    {
        if (!string.IsNullOrEmpty(acct) && acct != group.First().Escrow_Account)
        {
            <tr>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td class="right totals superscore">@string.Format("{0:C}", total)</td>
            </tr>
            total = 0.0;
        }
        if (acct != group.First().Escrow_Account)
        {
            <tr class="superscore">
                <td colspan="2" class="left overflow totals">@group.First().Escrow_Account</td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
            </tr>
        }
        acct = group.First().Escrow_Account;
        total += (double)group.Sum(x => x.Sub_Total);
            <tr>
                <td></td>
                <td colspan="2" class="left overflow totals">@group.First().Referral_Firm</td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td class="right totals">@string.Format("{0:C}", group.Sum(x => x.Sub_Total))</td>
            </tr>
            <tr>
                <td></td>
                <td></td>
                <td colspan="2" class="left overflow totals">@group.First().Client_Referral_Atty</td>
                <td></td>
            </tr>
        foreach (var row in group.OrderBy(x => x.Referral_Firm).ThenBy(x => x.Client_Referral_Atty).ThenBy(x => x.Client_Name))
        {
            <tr class="lineitems">
                <td class="left"></td>
                <td class="left"></td>
                <td class="left"></td>
                <td class="left">@row.Client_Name</td>
                <td class="right">@string.Format("{0:MM/dd/yyyy}", row.Period_From)</td>
                <td class="right">@string.Format("{0:MM/dd/yyyy}", row.Period_To)</td>
                <td class="right">@string.Format("{0:C}", row.Amount)</td>
                <td class="right">@string.Format("{0:P}", row.Client_Referral)</td>
                <td class="right">@string.Format("{0:C}", row.Sub_Total)</td>
            </tr>
        }
            <tr><td>&nbsp;</td></tr>
    }
            <tr>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td class="right totals superscore">@string.Format("{0:C}", total)</td>
            </tr>
        </table>
    </div>
</body>
</html>
