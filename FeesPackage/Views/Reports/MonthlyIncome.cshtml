@using FeesPackage.Models;
@model ClientInfoModel

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
</head>
<body>
    <style>
        .title {
            font-size: larger;
            font-weight: bold;
        }
        .date {
            float: right;
            font-style: italic;
        }
        .label {
            min-width: 246px;
            text-align: right;
            font-weight: bold
        }
        .totals {
            font-weight: bold
        }
        .value {
            min-width: 200px;
        }
        body, table {
            font-size: larger;
        }
        table.center {
            margin: auto;
            text-align: center;
        }
        td {
            min-width: 80px;
            white-space: nowrap;
        }
        td.right,
        th.right {
            text-align: right;
        }
        td.left,
        th.left {
            text-align: left;
        }
        th {
            border-bottom: 1px solid #555;
        }
        td.overflow {
            white-space: nowrap;
            max-width: 10px;
        }
        tr.lineitems {
            font-size: smaller;
        }
        tr.superscore td,
        td.superscore {
            border-top: 1px solid #000;
        }
        td.underscore {
            text-decoration: underline;
        }
        span.huge {
            font-size: 25pt;
        }
    </style>

    <div style="max-width: 1200px;">
        ══════════════════════════════════════════════════════════════════════════════════════════
        <div class="title"><span class="huge">Martin</span>LLC</div>
        <div class="title">Income Summary [@string.Format("{0:MM/dd/yyyy}", ViewBag.fromDate) - @string.Format("{0:MM/dd/yyyy}", ViewBag.toDate)]</div>
        <div class="date">@DateTime.Today.ToString("dd-MMM-yy")</div>
        ══════════════════════════════════════════════════════════════════════════════════════════
        <br />
        <table class="center" style="width:100%">
            <tr>
                <th></th>
                <th>Philadelphia Tax</th>
                <th>County Tax</th>
                <th>Attorney Total</th>
            </tr>
            @foreach (var grp in Model.MonthlyIncome.OrderBy(x => x.Key))
            {
                <tr class="superscore">
                    <td class="left overflow totals">@grp.Key</td>
                    <td>@grp.Where(x => x.County == "Phila").Sum(x => x.Amt_AmtXEscrow)</td>
                    <td>@grp.Where(x => x.County == "Cty").Sum(x => x.Amt_AmtXEscrow)</td>
                    <td>@grp.Sum(x => x.Amt_AmtXEscrow)</td>
                </tr>
                foreach (var atty in grp.GroupBy(x => x.Combo_Name).OrderBy(x => x.Key))
                {
                    <tr>
                        <td>@atty.Key</td>
                        <td>@atty.Where(x => x.County == "Phila").Sum(x => x.Amt_AmtXEscrow)</td>
                        <td>@atty.Where(x => x.County == "Cty").Sum(x => x.Amt_AmtXEscrow)</td>
                        <td>@atty.Sum(x => x.Amt_AmtXEscrow)</td>
                    </tr>
                }
            }
            <tr>
                <td>Grand Total:</td>
                <td>@Model.MonthlyIncome.SelectMany(n => n).Where(x => x.County == "Phila").Sum(x => x.Amt_AmtXEscrow)</td>
                <td>@Model.MonthlyIncome.SelectMany(n => n).Where(x => x.County == "Cty").Sum(x => x.Amt_AmtXEscrow)</td>
                <td>@string.Format("{0:C}", (double)Model.MonthlyIncome.SelectMany(n => n).Sum(x => x.Amt_AmtXEscrow))</td>
            </tr>
        </table>
    </div>
</body>
</html>
