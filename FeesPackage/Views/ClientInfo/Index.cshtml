@using FeesPackage.Models;
@using Newtonsoft.Json;
@model ClientInfoModel

@{
    ViewBag.Title = "tblClient";
}

<script>
    document.addEventListener("DOMContentLoaded", function () {
        ready();
    });
</script>

<div class="span9">
    <div class="content">
        <div class="module">
            <div class="module-head">
                <h3>
                    <i>@ViewBag.Title</i> Table
                </h3>
            </div>
            <div class="module-body table">
                <span>Search: </span>
                <input type="text" id="search" placeholder="Type here ..." style="height: 21px; width: 200px;" />
                <button id="addrowbutton" style="float: right">+</button>
                <div id='jqxWidget' style="font-size: 13px; font-family: Verdana; float: left; width: 100%; height: 100%;">
                    <div id="jqxgrid"></div>
                </div>
            </div>
        </div>
        <!--/.module-->
    </div>
    <!--/.content-->
</div>
<!--/.span9-->

<div id="dialog" title="Basic dialog" style="display:none">
</div>

<script>
    var groups = [];

    function ready() {
        $("#dialog").dialog({
            autoOpen: false,
            width: 460,
            resizable: false,
            modal: true,
            show: {
                effect: "blind",
                duration: 1000
            },
            hide: {
                effect: "explode",
                duration: 1000
            }
        });

        // prepare the Attorney list dropdown data
        var locallista = @Html.Raw(JsonConvert.SerializeObject(Model.Attys));

        var locallistaSource = {
            datatype: "array",
            datafields: [
                    { name: 'Name', type: 'string' },
                    { name: 'Id', type: 'string' }
            ],
            localdata: locallista
        };
        var locallistaAdapter = new $.jqx.dataAdapter(locallistaSource);

        // prepare the data
        var data = @Html.Raw(JsonConvert.SerializeObject(Model.Clients));
        var inUpdate = false;

        var source =
        {
            dataType: "json",
            updaterow: function (rowid, rowdata, commit) {
                if (!inUpdate) {
                    $.post('/ClientInfo', rowdata, function (data, status, jqXHR) {
                        if ($("#jqxgrid").jqxGrid('getcellvaluebyid', rowid, 'id') != parseInt(jqXHR.statusText)) {
                            inUpdate = true;
                            $("#jqxgrid").jqxGrid('setcellvaluebyid', rowid, 'id', parseInt(jqXHR.statusText));
                            inUpdate = false;
                        }
                        commit(true);
                    }).fail(function (jqXHR, textStatus, errorThrown) {
                        alert(textStatus + ': ' + errorThrown);
                    });
                }
            },
            dataFields: [
                { name: 'id', type: 'int' },
                { name: 'Client_Name', type: 'string' },
                { name: 'Employer_Name', type: 'string' },
                { name: 'Escrow', type: 'string' },
                { name: 'Handling_Atty', type: 'string' },
                { name: 'Handling', type: 'string' },
                { name: 'Credit_Atty', type: 'string' },
                { name: 'Credit', type: 'string' },
                { name: 'Is_County', type: 'string' },
                { name: 'County', type: 'string' },
                { name: 'Accident_Desc', type: 'string' },
                { name: 'Selection_Control', type: 'string' }
            ],
            id: 'insurance',
            localdata: data
        };

        var dataAdapter = new $.jqx.dataAdapter(source, {
            downloadComplete: function (data, status, xhr) { },
            loadComplete: function (data) { },
            beforeLoadComplete: function (records) { },
            loadError: function (xhr, status, error) { alert('loadError: status=' + status + ' error=' + error); },
        });
        var cellsrenderer_center = function (row, column, value) {
            return '<div style="text-align: center; margin-top: 5px;">' + value + '</div>';
        }
        var columnrenderer_center = function (value) {
            return '<div style="text-align: center; margin-top: 5px;">' + value + '</div>';
        }
        // create new row.
        $("#addrowbutton").on('click', function () {
            // add empty row in first position
            $("#jqxgrid").jqxGrid('addrow', null, {}, 'first');
            // begin editting newly added row, first column
            $("#jqxgrid").jqxGrid('begincelledit', 0, 'Client_Name');
        });
        $("#jqxgrid").jqxGrid(
        {
            theme: 'energyblue',
            width: '100%',
            height: '50%',
            autowidth: false,
            source: dataAdapter,
            showfilterrow: true,
            filterable: true,
            pageable: true,
            pagesize: 20,
            groupable: false,
            editable: false,
            sortable: true,
            ready: function () { setup(); },
            columnsresize: true,
            columns: [
                { text: 'id', datafield: 'id', hidden: true },
                { text: 'Client Name', datafield: 'Client_Name', filtertype: 'checkedlist' },
                { text: 'Employer Name', datafield: 'Employer_Name', filtertype: 'checkedlist' },
                { text: 'Escrow %', datafield: 'Escrow', filtertype: 'checkedlist' },
                { text: 'Handling Atty', datafield: 'Handling_Atty', filtertype: 'checkedlist' },
                { text: 'Handling %', datafield: 'Handling', filtertype: 'checkedlist' },
                { text: 'Credit Atty', datafield: 'Credit_Atty', filtertype: 'checkedlist' },
                { text: 'Credit %', datafield: 'Credit', filtertype: 'checkedlist' },
                { text: 'Is County', datafield: 'Is_County', filtertype: 'checkedlist' },
                { text: 'County', datafield: 'County', filtertype: 'checkedlist' },
                { text: 'Accident Desc', datafield: 'Accident_Desc', filtertype: 'checkedlist' },
                { text: 'Selection Control', datafield: 'Selection_Control', filtertype: 'checkedlist' }
            ]
        });

        $("#jqxgrid").on("celldoubleclick", function (event) {
            var args = event.args;
            var rowBoundIndex = args.rowindex;
            //var rowVisibleIndex = args.visibleindex;
            //var rightClick = args.rightclick; 
            //var ev = args.originalEvent;
            //var columnIndex = args.columnindex;
            //var dataField = args.datafield;
            //var value = args.value;

            // get 'id' value of row dblclk'd on
            $.post('/ClientInfo/Edit', { id: $("#jqxgrid").jqxGrid('getcell', rowBoundIndex, 'id').value }, function (data, status, jqXHR) {
                $('#dialog').html(data);
                $("#dialog").dialog("open");
            }).fail(function (jqXHR, textStatus, errorThrown) {
                alert(textStatus + ': ' + errorThrown);
            });
        });

        var options = {
            callback: function (value) {
                var datafield = "Client_Name";
                var searchText = value;
                var filter_or_operator = 1;
                var filtervalue = searchText;
                var filtercondition = 'CONTAINS';

                var filtergroup = new $.jqx.filter();
                var filter = filtergroup.createfilter('stringfilter', filtervalue, filtercondition);
                filtergroup.addfilter(filter_or_operator, filter);

                $("#jqxgrid").jqxGrid('clearfilters');
                $("#jqxgrid").jqxGrid('addfilter', datafield, filtergroup);
                $("#jqxgrid").jqxGrid('applyfilters');
            },
            wait: 750,
            highlight: true,
            allowSubmit: false,
            captureLength: 2
        }
        $("#search").typeWatch(options);
    }

    function getCookie(cname) {
        var name = cname + "=";
        var ca = document.cookie.split(';');
        for (var i = 0; i < ca.length; i++) {
            var c = ca[i];
            while (c.charAt(0) == ' ') {
                c = c.substring(1);
            }
            if (c.indexOf(name) == 0) {
                return c.substring(name.length, c.length);
            }
        }
        return "";
    }

    function setup() {
        $("#jqxgrid").jqxGrid('autoresizecolumns');

        $(window).bind('resize', function () {
            $("#jqxgrid").jqxGrid(
            {
                // set height of grid to available space
                height: $(window).height() - ($('.navbar').height()
                                            + $('.module').height()
                                            + $('.footer').height()
                                            + 100 // fudge factor for padding/margins
                                             )
            });
        }).trigger('resize');
    }
</script>
